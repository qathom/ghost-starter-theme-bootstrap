{
  "name": "ghost-starter-theme-bootstrap",
  "description": "Starter theme with Bootstrap v4 for Ghost Node.JS CMS",
  "version": "1.0.0",
  "engines": {
    "ghost": ">=3.0.0",
    "ghost-api": "v3"
  },
  "author": {
    "name": "Demo",
    "email": "info@demo.com"
  },
  "license": "MIT",
  "screenshots": {
    "desktop": "assets/screenshot-desktop.jpg"
  },
  "scripts": {
    "build": "node ./bin/build-css.js",
    "test": "gscan ."
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "Minimal"
    ]
  },
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/qathom/ghost-starter-theme-bootstrap.git"
  },
  "bugs": "https://github.com/qathom/ghost-starter-theme-bootstrap/issues",
  "devDependencies": {
    "bootstrap": "^4.4.1",
    "node-sass": "^4.13.1"
  },
  "config": {
    "posts_per_page": 15,
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1200
      },
      "xl": {
        "width": 2000
      }
    }
  }
}
